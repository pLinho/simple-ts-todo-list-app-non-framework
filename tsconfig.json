{
    "files": [
        "src/main.ts"
    ],
    "compilerOptions": {
        "moduleResolution": "Node",
        "module": "AMD",
        "noImplicitAny": true,
        "target": "ES2015",
        "declaration": true,
        "sourceMap": true,
        "noLib": false,
        "pretty": true,
        "rootDir": "src/",
        "baseUrl": "/",
        "outDir": "dist/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ],
    "compileOnSave": true
}
